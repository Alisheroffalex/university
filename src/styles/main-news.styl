@import '_partials/variables'

.main-news 
    padding-top  s(143)
    padding-bottom s(125)

    .row-grid 
        margin-top s(27)
        margin-bottom s(43)

    .category-panel
        list-style none 

        li
            position relative
            i 
                transition .2s ease
            .dropdown 
                margin 0px
                position absolute 
                width 100%
                left 0
                top 200%
                list-style none 
                text-align center
                background #fff
                opacity 0 
                box-shadow 0 5px s(5) rgba(0,0,0,.22)
                transition .3s ease

                li 
                    padding s(10) 0
                    margin 0px

                    
            &:hover 
                .dropdown 
                    opacity 1
                    z-index 99
                    top 100%
                    pointer-events unset

                i 
                    transform rotate(180deg)
